{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["react", "prettier"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react/jsx-runtime", "prettier"],
  "ignorePatterns": ["node_modules/", "dist/", ".eslintrc.json", "*.config.js", "*.cjs"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {},
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

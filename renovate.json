{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "regexManagers": [
    {
      "fileMatch": ["^template.json$"],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "\"dependencies\":\\s*\\{[^}]*}",
        "\"(?<depName>.*)\"[^\"]*:\\s*\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
